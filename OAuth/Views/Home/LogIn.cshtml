@using OAuth.Models;

@model LogInModel
@{
    ViewBag.Title = "Log In";
}

<h2>Log In</h2>
<hr />

@using (Html.BeginForm("LogIn", "Account", FormMethod.Post))
{
    <div>
        <div><strong>Username</strong></div>
        <div style="margin-top: 5px;">@Html.TextBoxFor(x => x.Username, new { @style = "padding: 5px;" })</div>
    </div>
    <div style="margin-top: 10px;">
        <div><strong>Password</strong></div>
        <div style="margin-top: 5px;">@Html.PasswordFor(x => x.Password, new { @style = "padding: 5px;" })</div>
    </div>
    <div style="margin-top: 10px;">
        <button type="submit" style="padding: 5px;">Log In</button>
    </div>
}